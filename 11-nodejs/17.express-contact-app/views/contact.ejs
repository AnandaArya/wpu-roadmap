<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">NO</th>
            <th scope="col">Nama</th>
            <th scope="col">NO HP</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <!-- kalau data contactnya kosong -->
          <% if (contacts.length === 0) { %>
            <tr>
              <td colspan="4">
                <div class="alert alert-danger fw-bold" role="alert">
                  Data contact masih kosong.
                </div>
              </td>
            </tr>
          <% } %>
          <% let no = 1; %> 
          <% contacts.forEach((contact, i) => { i++ %>
            <tr>
              <th scope="row"><%= i++ %> </th>
              <td><%= contact.nama %> </td>
              <td><%= contact.nohp %> </td>
              <td>
                <a href="/contact/<%= contact.nama %> " class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle me-1"></i>detail</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>