<div class="container mt-3">
  <div class="row">
    <div class="row col-md-6">
      <h2>Form Ubah Data Contact</h2>

      <% if (typeof errors != 'undefined') { %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% errors.forEach(error => { %>
              <li><%= error.msg %> </li>
            <% }); %>
          </ul>
        </div>
      <% } %>

      <form method="post" action="/contact/update">
        <div class="mb-3">
          <input type="hidden" class="form-control" id="oldNama" name="oldNama" value="<%= (contact.oldNama) ? contact.oldNama : contact.nama %>">
          <label for="nama" class="form-label">Nama</label>
          <input type="text" class="form-control" id="nama" name="nama" value="<%= contact.nama %>" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>" required>
        </div>
        <div class="mb-3">
          <label for="nohp" class="form-label">NO HP</label>
          <input type="text" class="form-control" id="nohp" name="nohp" value="<%= contact.nohp %>" required>
        </div>
        <button type="submit" class="btn btn-primary">Ubah Data Contact</button>
      </form>
    </div>
  </div>
</div>